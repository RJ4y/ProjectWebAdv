{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_new' %}

{% block main %}
    <h1>{{ 'title.event_new'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.naam) }}
        {{ form_row(form.klant_id) }}
        {{ form_row(form.adress_id) }}
        {{ form_row(form.type) }}
        {{ form_row(form.omschrijving) }}
        {{ form_row(form.personeel_id) }}
        {{ form_row(form.start_datum) }}
        {{ form_row(form.eind_datum) }}
        {{ form_row(form.verwacht_aantal_Gasten) }}

        <input type="submit" value="{{ 'label.create_event'|trans }}" class="btn btn-primary" />
        {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
        <a href="{{ path('admin_post_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    {{ form_end(form) }}
{% endblock %}


